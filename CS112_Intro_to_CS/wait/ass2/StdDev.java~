import java.util.Scanner;

public class StdDev {
    public static void main(String args[]) {
	Scanner conin = new Scanner(System.in);

	int count = 0;
	float sum = 0.0f;
	float ssum =0.0f;

	System.out.println("Enter numbers to calculate the results. At the end of the data typing, please enter 'done' or 'Q'");

	while (conin.hasNext()) {
	    if (conin.hasNextFloat()) {
		sum += conin.NextFloat();
		ssum += (conin.nextFloat() * conin.nextFloat());
		count++;
	    } 
        else if (conin.hasNextInt()) {
            sum += conin.nextInt();
            ssum += (conin.nextInt() * conin.nextInt());
            count++;
        }
        else if (conin.hasNextDouble()) {
            sum += conin.nextDouble();
            ssum += (conin.nextDouble() * conin.nextDouble());
            count++;
        }
	    else {
		String str = conin.next();
		if (str.equals("done")||str.equals("Q"))
		    break;
		else {
		    System.out.println("Data format error.");
		    return;
		}
	    }
	}
	System.out.println("Count is " + count);
	System.out.println("Average is " + sum / count);
	System.out.println("Standard Deviation is " + Math.sqrt(((ssum-((sum*sum) / count))/(count-1))));
    
    }
}
